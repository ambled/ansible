# Varnish environment configuration description. This was derived from
# the old style sysconfig/defaults settings

# Set this to 1 to make systemd reload try to switch vcl without restart.
RELOAD_VCL={{ varnish_cache_reload_vcl }}

# Main configuration file. You probably want to change it.
VARNISH_VCL_CONF={{ varnish_cache_vcl_conf }}

# Default address and port to bind to. Blank address means all IPv4
# and IPv6 interfaces, otherwise specify a host name, an IPv4 dotted
# quad, or an IPv6 address in brackets.
VARNISH_LISTEN_ADDRESS={{ varnish_cache_listen_address }}
VARNISH_LISTEN_PORT={{ varnish_cache_listen_port }}

# Admin interface listen address and port
VARNISH_ADMIN_LISTEN_ADDRESS={{ varnish_cache_admin_listen_address }}
VARNISH_ADMIN_LISTEN_PORT={{ varnish_cache_admin_listen_port }}

# Shared secret file for admin interface
VARNISH_SECRET_FILE={{ varnish_cache_secret_file }}

# Backend storage specification, see Storage Types in the varnishd(5)
# man page for details.
VARNISH_STORAGE="{{ varnish_cache_storage }}"

# Default TTL used when the backend does not specify one
VARNISH_TTL={{ varnish_cache_ttl }}

# User and group for the varnishd worker processes
VARNISH_USER={{ varnish_cache_user }}
VARNISH_GROUP={{ varnish_cache_group }}

